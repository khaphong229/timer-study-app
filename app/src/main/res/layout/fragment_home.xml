<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Material Card hiển thị thông tin user -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardUserInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Icon User -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgUserAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:background="@color/md_theme_primaryContainer"
                    android:padding="16dp"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Tên User -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Loading..."
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_onSurface"
                    app:layout_constraintTop_toTopOf="@id/imgUserAvatar"
                    app:layout_constraintStart_toEndOf="@id/imgUserAvatar"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Tuổi User -->
                <TextView
                    android:id="@+id/tvUserAge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Age: --"
                    android:textSize="16sp"
                    android:textColor="@color/md_theme_onSurface"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName"
                    app:layout_constraintStart_toEndOf="@id/imgUserAvatar"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Email User -->
                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:text="email@example.com"
                    android:textSize="14sp"
                    android:textColor="@color/md_theme_secondary"
                    app:layout_constraintTop_toBottomOf="@id/tvUserAge"
                    app:layout_constraintStart_toEndOf="@id/imgUserAvatar"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Card Bio -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/cardUserInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới thiệu"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_onSurface" />

                <TextView
                    android:id="@+id/tvUserBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Loading bio..."
                    android:textSize="14sp"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="@color/md_theme_onSurface" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Button Refresh -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Làm mới dữ liệu"
            android:textAllCaps="false"
            app:icon="@android:drawable/ic_menu_rotate"
            app:layout_constraintTop_toBottomOf="@id/cardBio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Progress Bar -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorColor="@color/md_theme_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>